{
  "variables": {
    "project_id": "",
    "source_image_family": "",
    "ssh_username": "",
    "machine_type": "",
    "ansible_extra_args": "",
    "image_zone": ""
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "bin/ansible.sh"
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/centos.yml",
      "playbook_dir": "ansible",
      "extra_arguments": "{{user `ansible_extra_args`}}"
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/dcos-node-vagrant.yml",
      "playbook_dir": "ansible",
      "extra_arguments": "{{user `ansible_extra_args`}}",
      "only": ["virtualbox-iso"]
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/dcos-node-gce.yml",
      "playbook_dir": "ansible",
      "extra_arguments": "{{user `ansible_extra_args`}}",
      "only": ["googlecompute"]
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "bin/zerodisk.sh",
      "only": ["virtualbox-iso"]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "output": "dcos-centos-virtualbox.box",
      "only": ["virtualbox-iso"]
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": 102400,
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "27bd866242ee058b7a5754e83d8ee8403e216b93d130d800852a96f41c34d86a",
      "iso_checksum_type": "sha256",
      "iso_url": "http://mirrors.sonic.net/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1611.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "2048" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ]
    },
    {
      "type": "googlecompute",
      "project_id": "{{user `project_id`}}",
      "image_name": "dcos-node-{{timestamp}}",
      "image_family": "dcos",
      "image_description": "DC/OS node image",
      "source_image_family": "{{user `source_image_family`}}",
      "zone": "{{user `image_zone`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "machine_type": "{{user `machine_type`}}",
      "disk_size": "20",
      "disk_type": "pd-standard",
      "network": "default"
    }
  ]
}

